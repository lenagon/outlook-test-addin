<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp 
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
  xsi:type="MailApp">
  
  <Id>8c6d2c2e-4a3c-4d9e-9e90-8b6b6f3c1a10</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Test Provider</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Test Buttons"/>
  <Description DefaultValue="Two test buttons"/>
  <IconUrl DefaultValue="https://officedev.github.io/testing-assets/addins/icons/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://officedev.github.io/testing-assets/addins/icons/icon-64.png"/>
  
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://lenagon.github.io/outlook-test-addin/commands.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <Permissions>ReadItem</Permissions>
  
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Taskpane.Url"/>
          
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>
                
                <Control xsi:type="Button" id="Button1">
                  <Label resid="Button1Label"/>
                  <Supertip>
                    <Title resid="Button1Label"/>
                    <Description resid="Button1Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>test1</FunctionName>
                  </Action>
                </Control>
                
                <Control xsi:type="Button" id="Button2">
                  <Label resid="Button2Label"/>
                  <Supertip>
                    <Title resid="Button2Label"/>
                    <Description resid="Button2Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>test2</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://officedev.github.io/testing-assets/addins/icons/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://officedev.github.io/testing-assets/addins/icons/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://officedev.github.io/testing-assets/addins/icons/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://lenagon.github.io/outlook-test-addin/commands.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Test"/>
        <bt:String id="Button1Label" DefaultValue="test1"/>
        <bt:String id="Button2Label" DefaultValue="test2"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="Button1Tooltip" DefaultValue="Show message test1"/>
        <bt:String id="Button2Tooltip" DefaultValue="Show message test2"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
