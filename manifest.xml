<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xsi:type="MailApp">

  <Id>3f0c9f12-2222-4444-9999-bbbbbbbbbbbb</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Test</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="Test Buttons"/>
  <Description DefaultValue="Two test buttons."/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.3"/>
    </Sets>
  </Requirements>

  <Permissions>ReadItem</Permissions>

  <VersionOverrides
    xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
    xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>

          <FunctionFile resid="Commands.Url"/>

          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="testGroup">
                <Label resid="GroupLabel"/>

                <Control xsi:type="Button" id="btnTest1">
                  <Label resid="Btn1"/>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>test1</FunctionName>
                  </Action>
                </Control>

                <Control xsi:type="Button" id="btnTest2">
                  <Label resid="Btn2"/>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>test2</FunctionName>
                  </Action>
                </Control>

              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Urls>
        <bt:Url id="Commands.Url"
                DefaultValue="https://lenagon.github.io/outlook-test-addin/commands.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Test"/>
        <bt:String id="Btn1" DefaultValue="test1"/>
        <bt:String id="Btn2" DefaultValue="test2"/>
      </bt:ShortStrings>
    </Resources>

  </VersionOverrides>
</OfficeApp>
